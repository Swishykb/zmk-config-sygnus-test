#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <4>;
        rows = <2>;
        // 2x2 per side = 4 keys per side, 8 total
        map = <
            RC(0,0) RC(0,1)     RC(0,2) RC(0,3)
            RC(1,0) RC(1,1)     RC(1,2) RC(1,3)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        
        // Test configuration for optical switches
        // Only using 2 rows and 2 columns for testing
        row-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        
        col-gpios = <&xiao_d 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
                    <&xiao_d 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };
};
